{{!-- Lista de Poderes Customizada com Tipo --}}
<style>
.power-type-badge {
	display: inline-block;
	padding: 2px 8px;
	border-radius: 4px;
	font-size: 11px;
	font-weight: 600;
	text-transform: uppercase;
	background: rgba(100, 100, 100, 0.3);
	color: #fff;
	border: 1px solid rgba(255, 255, 255, 0.2);
}
.power-type-geral { background: rgba(100, 150, 200, 0.4); border-color: rgba(100, 150, 200, 0.6); }
.power-type-origem { background: rgba(150, 100, 200, 0.4); border-color: rgba(150, 100, 200, 0.6); }
.power-type-classe { background: rgba(200, 150, 100, 0.4); border-color: rgba(200, 150, 100, 0.6); }
.power-type-racial { background: rgba(100, 200, 150, 0.4); border-color: rgba(100, 200, 150, 0.6); }
.power-type-tormenta { background: rgba(200, 100, 100, 0.4); border-color: rgba(200, 100, 100, 0.6); }
.power-type-devoto { background: rgba(200, 200, 100, 0.4); border-color: rgba(200, 200, 100, 0.6); }
</style>

<div class="inventory-header item flexrow">
	<div class="item-name">{{localize "T20.Powers"}}</div>
	<div class="item-type" style="flex: 0 0 100px;">{{localize "T20.Type"}}</div>
	<div class="item-controls">
		<a class="item-control item-create" title="{{localize 'T20.ItemCreate'}}" data-type="poder">
			<i class="fas fa-plus"></i> {{localize "T20.Add"}}
		</a>
	</div>
</div>

<ol class="inventory-list item-list">
	{{#each actor.poderes as |item id|}}
	<li class="item flexrow" data-item-id="{{item._id}}">
		<div class="item-name">
			<div class="item-image" style="background-image: url('{{item.img}}')"></div>
			<h4>{{item.name}}</h4>
		</div>
		<div class="item-type" style="flex: 0 0 100px;">
			{{#if item.tipoLabel}}
				<span class="power-type-badge power-type-{{item.tipo}}">{{item.tipoLabel}}</span>
			{{else}}
				<span class="power-type-badge">-</span>
			{{/if}}
		</div>
		<div class="item-controls">
			<a class="item-control item-edit" title="{{localize 'T20.ItemEdit'}}"><i class="fas fa-edit"></i></a>
			<a class="item-control item-delete" title="{{localize 'T20.ItemDelete'}}"><i class="fas fa-trash"></i></a>
		</div>
	</li>
	{{/each}}
</ol>

